<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="funhouse.weatherforcast.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
    android:id="@+id/tempetureLabelC"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:text="--"
    android:textColor="@android:color/black"
    android:textSize="70sp"/>

    <ImageView
        android:id="@+id/degreeImagFeVieweViewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/degree_celsius2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tempetureLabelC"
        android:layout_toEndOf="@+id/tempetureLabelC"/>

    <TextView
        android:id="@+id/timeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tempetureLabelC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:gravity="left"
        android:phoneNumber="false"
        android:text="..."
        android:textColor="#80000000"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/locationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeLabel"
        android:layout_alignLeft="@+id/timeLabel"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/timeLabel"
        android:layout_marginBottom="33dp"
        android:gravity="left"
        android:text="New York, NY"
        android:textColor="@android:color/black"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/locationLabel"
        android:layout_toLeftOf="@+id/tempetureLabelC"
        android:layout_toStartOf="@+id/tempetureLabelC"
        android:src="@drawable/clear_day"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timeLabel"
        android:layout_alignRight="@+id/timeLabel"
        android:layout_below="@+id/tempetureLabelC"
        android:layout_marginTop="34dp"
        android:orientation="horizontal"
        android:layout_alignParentStart="false"
        android:baselineAligned="false"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HUMIDITY"
                android:id="@+id/humidityLabel"
                android:textColor="#80000000"
                android:textSize="15sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:id="@+id/humidityValue"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RAIN/SNOW"
                android:id="@+id/precipLabel"
                android:textColor="#80000000"
                android:textSize="15sp"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--"
                android:id="@+id/precipValue"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Getting current weather..."
        android:id="@+id/summaryLabel"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="37dp"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:textColor="#80000000"
        android:textSize="18sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refreshImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_cached_black_36dp"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignTop="@+id/refreshImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/refreshImageView"
        android:layout_alignLeft="@+id/refreshImageView"
        android:layout_alignStart="@+id/refreshImageView"/>


</RelativeLayout>
